NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration (Real)
# Set USE_MOCK_DB=false to use these
USE_MOCK_DB=true

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=justback
DB_USER=postgres
DB_PASSWORD=your_password

# MongoDB
MONGODB_URI=mongodb://localhost:27017/justback

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT (for token generation)
JWT_SECRET=justback_prod_secret_change_me
JWT_REFRESH_SECRET=justback_prod_refresh_secret_change_me
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d

# URLs
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001
HOST_URL=http://localhost:3002

# Support
SUPPORT_PHONE_NUMBER=+2348000000000
